                        <option value="4">D</option>
                    </select>
                    <span asp-validation-for="Questions[3].AnswerTrue" class="text-danger"></span>
                </div>
                <div class="col-3"></div>
            </div>
        </div>
        <div class="col-1"></div>
    </div>
    <div class="row">
        <div class="col-4"></div>
        <div class="col-4">
            <button type="submit" class="form-control btn btn-primary mb-2">Create Form</button>
        </div>
        <div class="col-4"></div>
    </div>
</form>


@section Scripts{

    <script>
        $(document).ready(function () {

            $('#formQuestion').on('change', function (e) {
                $("#formText").val($('#formQuestion').val());
            });

        })
    </script>
}