                    <span asp-validation-for="Questions[2].Answers[3].Answer" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-3"></div>
                <div class="col-6">
                    <select asp-for="Questions[2].AnswerTrue" class="form-control mb-2" id="">
                        <option value="null">Choose Correct Answer</option>
                        <option value="1">A</option>
                        <option value="2">B</option>
