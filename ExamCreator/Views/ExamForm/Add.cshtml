@model E.Core.ExamFormModule.Requests.ExamFormRequest
<br />
<br />
<form method="post">
    <div class="row">
        <div class="col-1"></div>
        <div class="col-10">
            <select class="form-control mb-4" asp-for="FormQuestion" id="formQuestion">
                <option value="null">Choose Question</option>
                @foreach (var item in ViewBag.ArticlesList)
                {
                    <option value="@item.Text">@item.Title</option>
                }
            </select>
            <span asp-validation-for="FormQuestion" class="text-danger"></span>
            <textarea class="form-control mb-2" rows="8" asp-for="FormText" id="formText"></textarea>
            <span asp-validation-for="FormText" class="text-danger"></span>
        </div>
        <div class="col-1"></div>
    </div>
    <div class="row">
        <div class="col-1"></div>
        <div class="col-10">
            <input class="form-control mb-1" asp-for="Questions[0].Question" type="text" placeholder="Question 1" />
            <span asp-validation-for="Questions[0].Question" class="text-danger"></span>
            <div class="row">
                <div class="col-5">
                    <input class="form-control mb-1" asp-for="Questions[0].Answers[0].Answer" type="text" placeholder="A)" />
                    <span asp-validation-for="Questions[0].Answers[0].Answer" class="text-danger"></span>
                </div>
                <div class="col-2"></div>
                <div class="col-5">
                    <input class="form-control mb-1" asp-for="Questions[0].Answers[1].Answer" type="text" placeholder="B)" />
                    <span asp-validation-for="Questions[0].Answers[1].Answer" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-5">
                    <input class="form-control mb-1" asp-for="Questions[0].Answers[2].Answer" type="text" placeholder="C)" />
                    <span asp-validation-for="Questions[0].Answers[2].Answer" class="text-danger"></span>
                </div>
                <div class="col-2"></div>
                <div class="col-5">
                    <input class="form-control mb-1" asp-for="Questions[0].Answers[3].Answer" type="text" placeholder="D)" />
                    <span asp-validation-for="Questions[0].Answers[3].Answer" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-3"></div>
                <div class="col-6">
                    <select asp-for="Questions[0].AnswerTrue" class="form-control mb-2" id="">
                        <option value="null">Choose Correct Answer</option>
                        <option value="1">A</option>
                        <option value="2">B</option>
                        <option value="3">C</option>
                        <option value="4">D</option>
                    </select>
                    <span asp-validation-for="Questions[0].AnswerTrue" class="text-danger"></span>
                </div>
                <div class="col-3"></div>
            </div>
        </div>
        <div class="col-1"></div>
    </div>
    <div class="row">
        <div class="col-1"></div>
        <div class="col-10">
            <input class="form-control mb-1" asp-for="Questions[1].Question" type="text" placeholder="Question 2" />
            <span asp-validation-for="Questions[1].Question" class="text-danger"></span>
            <div class="row">
                <div class="col-5">
                    <input class="form-control mb-1" asp-for="Questions[1].Answers[0].Answer" type="text" placeholder="A)" />
                    <span asp-validation-for="Questions[1].Answers[0].Answer" class="text-danger"></span>
                </div>
